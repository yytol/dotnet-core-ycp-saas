@page
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/Desktop.cshtml";
}

<dpzp sign="Manage_Authorization_Add">
    <div class="dig-body">
        <div dpz-id="Tool" class="dig-tools">
            <a href="javascript:;" v-on:click="onSave"><img v-bind:src="Images.Save" />保存</a>
            <a href="javascript:;" v-on:click="onCancel"><img v-bind:src="Images.Cancel" />取消</a>
        </div>
        <div dpz-id="Form" class="dig-form">
            <div class="dig-form-box">
                <div class="dig-line">
                    <div class="dig-label">名称:</div>
                    <div class="dig-input"><input name="Name" type="text" placeholder="在此输入名称" style="width:200px;" v-bind:value="Args.Name" /></div>
                </div>
                <div class="dig-line">
                    <div class="dig-label">数据库类型:</div>
                    <div class="dig-input">
                        <select name="DBType">
                            <option value="">请选择</option>
                            <option value="SqlServer">Microsoft SqlServer</option>
                            <option value="MySql">MySql/MerriaDB</option>
                            <option value="Orcale">Orcale</option>
                            <option value="Access">Microsoft Access</option>
                            <option value="Sqlite">Sqlite</option>
                        </select>
                    </div>
                </div>
                <div class="dig-line">
                    <div class="dig-label">数据库标识:</div>
                    <div class="dig-input"><input name="DBSign" type="text" placeholder="在此输入数据库标识" style="width:100px;" v-bind:value="Args.DBSign" /></div>
                </div>
                <div class="dig-line">
                    <div class="dig-label">数据库地址:</div>
                    <div class="dig-input"><input name="DBIP" type="text" placeholder="在此输入数据库地址" style="width:300px;" v-bind:value="Args.DBIP" /></div>
                </div>
                <div class="dig-line">
                    <div class="dig-label">数据库端口:</div>
                    <div class="dig-input"><input name="DBPort" type="text" placeholder="在此输入数据库端口" style="width:100px;" v-bind:value="Args.DBPort" /></div>
                </div>
                <div class="dig-line">
                    <div class="dig-label">数据库连接用户:</div>
                    <div class="dig-input"><input name="DBUser" type="text" placeholder="在此输入数据库连接用户" style="width:200px;" v-bind:value="Args.DBUser" /></div>
                </div>
                <div class="dig-line">
                    <div class="dig-label">数据库连接密码:</div>
                    <div class="dig-input"><input name="DBPwd" type="text" placeholder="在此输入数据库连接密码" style="width:200px;" v-bind:value="Args.DBPwd" /></div>
                </div>
                <div class="dig-line">
                    <div class="dig-label">访问地址:</div>
                    <div class="dig-input"><input name="UrlEntrance" type="text" placeholder="在此输入访问入口" style="width:100%;" v-bind:value="Args.UrlEntrance" /></div>
                </div>
                <div class="dig-line">
                    <div class="dig-label">脚本入口:</div>
                    <div class="dig-input"><input name="ScriptEntrance" type="text" placeholder="在此输入脚本入口" style="width:100%;" v-bind:value="Args.ScriptEntrance" /></div>
                </div>
            </div>
        </div>
    </div>
</dpzp>

